<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_single_layout"
    android:orientation="vertical"
    >

        <LinearLayout
            android:id="@+id/chat_left_msg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="40dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/chat_left_msg_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_rentangle_orange"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />


            <TextView
                android:id="@+id/from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:text="12:15"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />

        </LinearLayout>

    <LinearLayout
            android:id="@+id/chat_right_msg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/chat_right_msg_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_rentangle_orange"
                android:padding="10dp"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />

            <TextView
                android:id="@+id/to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="12:15"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />

        </LinearLayout>



    <LinearLayout
        android:id="@+id/image_left_msg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="40dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/mensaje_foto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/from_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="12:15"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_right_msg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">


         <ImageView
            android:id="@+id/mensaje_foto2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/to_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="12:15"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/audio_msg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/play_pause_chat_msg"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp30"
            android:layout_marginRight="15dp"
            android:src="@drawable/play"
            android:theme="@style/RaisedButtonDark" />

        <TextView
            android:id="@+id/to_time_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="12:15"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/audio_left_msg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/play_pause_chat_msg_left"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp30"
            android:layout_marginRight="15dp"
            android:src="@drawable/play"
            android:theme="@style/RaisedButtonDark" />


        <TextView
            android:id="@+id/to_time_voice_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="12:15"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />


    </LinearLayout>



</LinearLayout>