<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.listening.reading.Reading_3_Activity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/pregunta_1_reading_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preguntas"
                        android:textSize="@dimen/d15sp"
                        android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="168dp"
                    android:text="@string/hint_true"
                    android:textSize="@dimen/edittext_textsize"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp50"
                    android:text="@string/hint_false"
                    android:textSize="@dimen/edittext_textsize"
                    android:textStyle="bold" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/res_reading_1_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/reading_radio_buton_1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp20" />

                <RadioButton
                    android:id="@+id/reading_radio_buton_2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp30"
                    android:textSize="@dimen/sp20" />
            </RadioGroup>


            <ImageView
                android:id="@+id/incorrect_opc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/wrong_answer"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/correct_opc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/online_icon"
                android:visibility="invisible"

                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_activity_Reading_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:background="@drawable/button_rounded_signin"
                    android:text="@string/bottom_calificar"
                    android:theme="@style/RaisedButtonDark" />

                <Button
                    android:id="@+id/button_continuar_activity_Reading_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:background="@drawable/button_rounded_signin"
                    android:text="@string/continuar"
                    android:theme="@style/RaisedButtonDark"
                    android:visibility="invisible" />

            </RelativeLayout>

        </LinearLayout>




</android.support.design.widget.CoordinatorLayout>