<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Activities_Activity"
    android:orientation="vertical"
    >


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarActi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarActi"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin"/>
    </android.support.design.widget.AppBarLayout>


            <android.support.design.button.MaterialButton
                    android:id="@+id/btn_reading_activity"
                    android:layout_width="350dp"
                    android:layout_height="@dimen/dp50"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/sp20"
                    app:strokeColor="@color/editTextColorBlack"
                    app:strokeWidth="3dp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/colorAccent"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="@color/editTextColorWhite"
                    android:text="@string/Reading" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sp20"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/calific_reading_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bottom_calificacion"/>

                        <TextView
                            android:id="@+id/number_reading_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp5"
                            android:text="@string/number_card" />

                </LinearLayout>

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_writing_activity"
                    android:layout_width="350dp"
                    android:layout_height="@dimen/dp50"
                    android:layout_gravity="center"
                    android:background="@drawable/book10_7"
                    android:layout_marginTop="@dimen/sp20"
                    app:strokeColor="@color/editTextColorBlack"
                    app:strokeWidth="3dp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/colorAccent"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="@color/editTextColorWhite"
                    android:text="@string/Writing"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sp20"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/calific_writing_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_calificacion"/>

                        <TextView
                            android:id="@+id/number_writing_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_card"
                            android:layout_marginLeft="@dimen/dp5"/>

                </LinearLayout>

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_listening_activity"
                    android:layout_width="350dp"
                    android:layout_height="@dimen/dp50"
                    android:layout_gravity="center"
                    android:background="@drawable/music_notes_video"
                    android:layout_marginTop="@dimen/sp20"
                    app:strokeColor="@color/editTextColorBlack"
                    app:strokeWidth="3dp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/colorAccent"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="@color/editTextColorWhite"
                    android:text="@string/Listenig"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sp20"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/calific_listening_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_calificacion"/>

                        <TextView
                            android:id="@+id/number_listenig_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_card"
                            android:layout_marginLeft="@dimen/dp5"/>

                </LinearLayout>

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_vocabulary_activity"
                    android:layout_width="350dp"
                    android:layout_height="@dimen/dp50"
                    android:layout_gravity="center"
                    android:background="@drawable/kkk"
                    android:layout_marginTop="@dimen/sp20"
                    app:strokeColor="@color/editTextColorBlack"
                    app:strokeWidth="3dp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/colorAccent"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="@color/editTextColorWhite"
                    android:text="@string/Vocabulary"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sp20"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/calific_vocabulary_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_calificacion"/>

                        <TextView
                            android:id="@+id/number_vocabulary_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_card"
                            android:layout_marginLeft="@dimen/dp5"/>

                </LinearLayout>

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_grammar_activity"
                    android:layout_width="350dp"
                    android:layout_height="@dimen/dp50"
                    android:layout_gravity="center"
                    android:background="@drawable/engineering_gears_wallpaper_in_blue_vector"
                    android:layout_marginTop="@dimen/sp20"
                    app:strokeColor="@color/editTextColorBlack"
                    app:strokeWidth="3dp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/colorAccent"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="@color/editTextColorWhite"
                    android:text="@string/grammar"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sp20"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/calific_grammar_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_calificacion"/>

                        <TextView
                            android:id="@+id/number_grammar_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_card"
                            android:layout_marginLeft="@dimen/dp5"/>

                </LinearLayout>

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_speaking_activity"
                    android:layout_width="350dp"
                    android:layout_height="@dimen/dp50"
                    android:layout_gravity="center"
                    android:background="@drawable/fondo_manchas_abstractas_coloridas_acuarela_23_2148209195"
                    android:layout_marginTop="@dimen/sp20"
                    app:strokeColor="@color/editTextColorBlack"
                    app:strokeWidth="3dp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/colorAccent"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="@color/editTextColorWhite"
                    android:text="@string/Speaking"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sp20"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/calific_speaking_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bottom_calificacion"/>

                        <TextView
                            android:id="@+id/number_speaking_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_card"
                            android:layout_marginLeft="@dimen/dp5"/>

                </LinearLayout>
</LinearLayout>