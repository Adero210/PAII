<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.listening.vocabulary.Vocabulary_1_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_vocabulary_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_vocabulary_1"
                android:textAlignment="center"
                android:textSize="@dimen/edittext_textsize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sp20"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="horizontal">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_1_vocabulary_1"
                    android:layout_width="180dp"
                    android:layout_height="190dp"
                    android:src="@drawable/pp" />
                <TextView
                    android:id="@+id/textimage_1_vocabulary_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:textColor="@color/editTextColorWhite"
                    android:visibility="gone"
                    android:text="Texto Texto" />
                <ImageView
                    android:id="@+id/palomita1_voca_1"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="right"
                    android:src="@drawable/palomita_azul_png" />
            </FrameLayout>
                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_2_vocabulary_1"
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:src="@drawable/pp" />
                    <ImageView
                        android:id="@+id/palomita2_voca_1"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="right"
                        android:src="@drawable/palomita_azul_png" />
                    <TextView
                        android:id="@+id/textimage_2_vocabulary_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:textColor="@color/editTextColorWhite"
                        android:visibility="gone"
                        android:text="Texto Texto" />
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="horizontal">

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_3_vocabulary_1"
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:src="@drawable/pp" />
                    <ImageView
                        android:id="@+id/palomita3_voca_1"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="right"
                        android:src="@drawable/palomita_azul_png" />
                    <TextView
                        android:id="@+id/textimage_3_vocabulary_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:textColor="@color/editTextColorWhite"
                        android:visibility="gone"
                        android:text="Texto Texto" />
                </FrameLayout>

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_4_vocabulary_1"
                        android:layout_width="180dp"
                        android:layout_height="190dp"
                        android:src="@drawable/pp" />
                    <ImageView
                        android:id="@+id/palomita4_voca_1"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="right"
                        android:src="@drawable/palomita_azul_png" />
                    <TextView
                        android:id="@+id/textimage_4_vocabulary_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:textColor="@color/editTextColorWhite"
                        android:visibility="gone"
                        android:text="Texto Texto" />
                </FrameLayout>

            </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
              <Button
                android:id="@+id/button_activity_vocabulary_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded_signin"
                android:layout_marginTop="@dimen/dp25"
                android:text="@string/bottom_calificar"
                android:theme="@style/RaisedButtonDark" />
            <Button
                android:id="@+id/button_activity_con_vocabulary_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/button_rounded_signin"
                android:visibility="invisible"
                android:text="@string/continuar"
                android:theme="@style/RaisedButtonDark" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>