<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.listening.vocabulary.Vocabulary_4_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_vocabulary_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Traduce"
                android:textAlignment="center"
                android:textSize="@dimen/edittext_textsize"
                android:textStyle="bold"/>

                <Button
                    android:id="@+id/play_pause_activity_vocabulary_4"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp25"
                    android:background="@drawable/play"
                    android:theme="@style/RaisedButtonDark" />
            <TextView
                android:id="@+id/textinput_vocabulary_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Escucha_selecciona"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <Button
                    android:layout_marginTop="@dimen/dp50"
                    android:id="@+id/opcion1_activity_vocabulary_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/button_rounded_signin"
                    android:text="@string/opcion"
                    android:theme="@style/RaisedButtonDark" />

                <Button
                    android:layout_marginTop="@dimen/dp50"
                    android:id="@+id/opcion1_activity_sel_vocabulary_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/rounded_rentangle_orange"
                    android:text="@string/opcion"
                    android:theme="@style/RaisedButtonDark"
                    android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <Button
                    android:id="@+id/opcion2_activity_vocabulary_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/button_rounded_signin"
                    android:text="@string/opcion"
                    android:theme="@style/RaisedButtonDark" />

                <Button
                    android:id="@+id/opcion2_activity_sel_vocabulary_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/rounded_rentangle_orange"
                    android:text="@string/opcion"
                    android:theme="@style/RaisedButtonDark"
                    android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                <Button
                    android:id="@+id/opcion3_activity_vocabulary_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/button_rounded_signin"
                    android:text="@string/opcion"
                    android:theme="@style/RaisedButtonDark" />

                <Button
                    android:id="@+id/opcion3_activity_sel_vocabulary_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/rounded_rentangle_orange"
                    android:text="@string/opcion"
                    android:theme="@style/RaisedButtonDark"
                    android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                <Button
                    android:id="@+id/opcion4_activity_vocabulary_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/button_rounded_signin"
                    android:text="@string/opcion"
                    android:theme="@style/RaisedButtonDark" />

                <Button
                    android:id="@+id/opcion4_activity_sel_vocabulary_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/rounded_rentangle_orange"
                    android:text="@string/opcion"
                    android:theme="@style/RaisedButtonDark"
                    android:visibility="invisible"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_activity_vocabulary_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:background="@drawable/button_rounded_signin"
                android:text="@string/bottom_calificar"
                android:theme="@style/RaisedButtonDark" />


            <Button
                android:id="@+id/button_activity_con_vocabulary_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/button_rounded_signin"
                android:visibility="invisible"
                android:text="@string/continuar"
                android:theme="@style/RaisedButtonDark" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>