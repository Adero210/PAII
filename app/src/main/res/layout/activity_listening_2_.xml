<?xml version="1.0" encoding="utf-8"?>
<android.support.design.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.listening.Listening_2_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp25"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/image1_activity_listening_2"
                android:layout_width="145dp"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@drawable/image1" />

                <Button
                    android:id="@+id/play_pause_1__activity_listening_2"
                    android:layout_width="104dp"
                    android:layout_height="71dp"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp25"
                    android:background="@drawable/play"
                    android:theme="@style/RaisedButtonDark" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image2_activity_listening_2"
                    android:layout_width="145dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/image1" />

                <Button
                    android:id="@+id/play_pause_2__activity_listening_2"
                    android:layout_width="104dp"
                    android:layout_height="71dp"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp25"
                    android:background="@drawable/play"
                    android:theme="@style/RaisedButtonDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image3_activity_listening_2"
                    android:layout_width="145dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/image1" />

                <Button
                    android:id="@+id/play_pause_3__activity_listening_2"
                    android:layout_width="104dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="@dimen/dp25"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@drawable/play"
                    android:theme="@style/RaisedButtonDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image4_activity_listening_2"
                    android:layout_width="145dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/image1" />

                <Button
                    android:id="@+id/play_pause_4__activity_listening_2"
                    android:layout_width="104dp"
                    android:layout_height="71dp"
                    android:layout_marginTop="@dimen/dp25"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@drawable/play"
                    android:theme="@style/RaisedButtonDark" />
            </LinearLayout>

        </LinearLayout>

    <Button
        android:id="@+id/button_activity_listening_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded_signin"
        android:layout_marginTop="@dimen/dp25"
        android:text="@string/bottom_calificar"
        android:theme="@style/RaisedButtonDark" />

    </LinearLayout>

</android.support.design.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout>