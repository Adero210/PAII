<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.listening.writing.Writing_1_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_1_activity_writing_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Adivina"
                android:textAlignment="center"
                android:textSize="@dimen/edittext_textsize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="Length:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"

                    android:text="@string/number_card"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_1_writing_3"
                        android:layout_width="206dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/pp" />

                    <ImageView
                        android:id="@+id/image_2_writing_3"

                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image1" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_3_writing_3"

                        android:layout_width="206dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pp" />

                    <ImageView
                        android:id="@+id/image_4_writing_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_20160720_wa0013" />


                </LinearLayout>


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"

                >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <EditText
                android:id="@+id/editText_1_activity_writing_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text"
                android:inputType="textMultiLine" />


            <Button
                android:id="@+id/button_activity_Writing_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:background="@drawable/button_rounded_signin"
                android:text="@string/bottom_calificar"
                android:theme="@style/RaisedButtonDark" />

            </LinearLayout>

            </ScrollView>



        </LinearLayout>



    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>