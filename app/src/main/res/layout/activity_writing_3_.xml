                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_14_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_15_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_16_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_17_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_18_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/button_activity_Writing_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp50"
                    android:layout_marginRight="@dimen/dp5"
                    android:background="@drawable/button_rounded_signin"
                    android:text="@string/bottom_calificar"
                    android:theme="@style/RaisedButtonDark" />


                <Button
                    android:id="@+id/button_continuar_activity_writing_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp50"
                    android:layout_marginRight="@dimen/dp5"
                    android:background="@drawable/button_rounded_signin"
                    android:text="@string/continuar"
                    android:theme="@style/RaisedButtonDark"
                    android:visibility="invisible" />

            </RelativeLayout>

        </LinearLayout>


</android.support.design.widget.CoordinatorLayout>