<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.listening.writing.Writing_3_Activity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textview_1_activity_writing_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Adivina"
                android:textAlignment="center"
                android:textSize="@dimen/edittext_textsize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="Length:"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/lenght_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="@string/number_card"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="288dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_1_writing_3"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo" />

                    <ImageView
                        android:id="@+id/image_2_writing_3"

                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_3_writing_3"

                        android:layout_width="192dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo" />

                    <ImageView
                        android:id="@+id/image_4_writing_3"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedor_botones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp40"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/char_1_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_2_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_3_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_4_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_5_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_6_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_7_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_8_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_9_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/char_10_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_11_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_12_writing_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/dp5"
                        android:background="@color/colorAccent"
                        android:theme="@style/RaisedButtonDark" />

                    <Button
                        android:id="@+id/char_13_writing_3"
